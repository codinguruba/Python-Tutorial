# Question 1

print('''
|-----------------------------|
| Welcome to my calculator    |
|   Press a to add            |
|   Press s to subtract       |
|   Press m to multiply       |
|   Press q to quit calculator|
|-----------------------------|
''')

def addition():
    a = int(input("Enter a:"))
    b = int(input("Enter b:"))
    print(a+b)
    
def subtract():
    a = int(input("Enter a:"))
    b = int(input("Enter b:"))
    print(a-b)
    
def multiply():
    a = int(input("Enter a:"))
    b = int(input("Enter b:"))
    print(a*b)
    
running = True

while(running):
    choice = input("Enter a choice:")
    
    if(choice == "a"):
        addition()
        
    elif(choice == "s"):
        subtract()
        
    elif(choice == "m"):
        multiply()
        
    elif(choice == "q"):
        print("Calculator Off")
        break
        
    else:
        print("Invalid")


#Practise question 2


student_data = ["John","Albin","Alex"]
print('''
|--------------------------------------|
|      Welcome to my student program   |
|      Press d to display student      |
|      Press a to add student          |
|      Press r to remove a student     |
|--------------------------------------|
''')

def display_student():
    print(student_data)
    
def add_student():
    s = input("Enter student name to add:")
    student_data.append(s)
    print(student_data)
    
def remove_student():
    s = input("Enter the student name to delete:")
    student_data.remove(s)
    print(student_data)
    
running = True

while(running):
    
    choice = input("Enter a choice:")
    
    if(choice == "d"):
        display_student()
        
    elif(choice == "a"):
        add_student()
        
    elif(choice == "r"):
        remove_student()
        
    elif(choice == "q"):
        break
    
    else:
        print("Invalid choice")
    
